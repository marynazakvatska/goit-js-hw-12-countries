{{#each this}}
<div class="container ">

    <h1 class="country-title">{{name}}</h1>
    <div class="card-img">


        <div class="card-body">
            <h2>Capital : {{capital}}</h2>
            <h2>Population : {{population}}</h2>
            <h2>Languages : </h2>
            <ul class="list-group">
                {{#each languages}}
                <li class="list-group-item">{{name}}</li>
                {{/each}}
            </ul>
        </div>
        <img class="image" src={{flag}} alt={{name}} width="420">
    </div>
</div>
{{/each}}